<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgs"
    tools:context=".Profil.ProfilPimpinan">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/logoutaplikasi"
                android:layout_width="50dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/keluars"
                android:layout_height="50dp"/>

            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/back"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="-5dp"
                android:text="keluar"
                android:layout_toRightOf="@id/profils"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_height="30dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profils"
                android:layout_marginTop="-72dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/ikon_user"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/usernameku"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/emailku"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/radius"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ikon_user"/>
            <TextView
                android:id="@+id/namaku"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:text="Nama"/>
        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/telepon"/>
            <TextView
                android:id="@+id/nohp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:text="nohp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/alamat" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Alamat"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/emails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/edit"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Edit Profil"/>
</LinearLayout>